{
  int i;
  cputs ("hello!\n");
  if (wherex () != 1 || wherey () != 2)
    abort ();
  clrscr ();
  if (wherex () != 1 || wherey () != 1)
    abort ();
  for (i = 1; i <= 5; ++i)
    {
      gotoxy (i, i);
      cputs ("world");
    }
  window (4, 2, 5, 4);
