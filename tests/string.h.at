AT_SETUP([[_fmemcmp]])
AT_LIBI86_CHECK(dnl
[[#include <i86.h>
#include <stdint.h>
#include <libi86/stdlib.h>
#include <libi86/string.h>
extern void abort (void);
int
main (void)
{
  static const uint8_t psp_sig[] = { 0xcd, 0x20 },
		       blah1[] = { 0xff, 0x00 }, blah2[] = { 0x00, 0xff },
		       blah3[] = { 0x80, 0x80 },
		       blah4[] = { 0xcd, 0x20, 0x00 },
		       blah5[] = { 0xcd, 0x20, 0xff },
		       blah6[] = { 0x80, 0x80, 0x80 },
		       blah7[] = { 0xff }, blah8[] = { 0x00 },
		       blah9[] = { 0xcd };
  if (_fmemcmp (MK_FP (_psp, 0), _CV_FP (psp_sig), sizeof psp_sig) != 0)
    abort ();
  if (_fmemcmp (MK_FP (_psp, 0), _CV_FP (blah1), sizeof blah1) >= 0)
    abort ();
  if (_fmemcmp (MK_FP (_psp, 0), _CV_FP (blah2), sizeof blah2) <= 0)
    abort ();
  if (_fmemcmp (MK_FP (_psp, 0), _CV_FP (blah3), sizeof blah3) <= 0)
    abort ();
  if (_fmemcmp (_CV_FP (blah4), MK_FP (_psp, 0), sizeof blah4) > 0)
    abort ();
  if (_fmemcmp (_CV_FP (blah5), MK_FP (_psp, 0), sizeof blah5) < 0)
    abort ();
  if (_fmemcmp (_CV_FP (blah6), MK_FP (_psp, 0), sizeof blah6) >= 0)
    abort ();
  if (_fmemcmp (MK_FP (_psp, 0), _CV_FP (blah7), sizeof blah7) >= 0)
    abort ();
  if (_fmemcmp (MK_FP (_psp, 0), _CV_FP (blah8), sizeof blah8) <= 0)
    abort ();
  if (_fmemcmp (MK_FP (_psp, 0), _CV_FP (blah9), sizeof blah9) != 0)
    abort ();
  /* Beware of corner cases... */
  if (_fmemcmp (_CV_FP (blah1), MK_FP (_psp, 0), 0) != 0)
    abort ();
  return 0;
}]],[])
AT_CLEANUP

AT_SETUP([[_fmemcpy, _fmempcpy]])
AT_LIBI86_CHECK(dnl
[[#include <i86.h>
#include <stdlib.h>
#include <unistd.h>
#include <libi86/string.h>
const char foo[] = "hello!!!", bar[] = "world ";
char baz[14];
int
main (void)
{
  __libi86_fpv_t res = _fmemcpy (_CV_FP (baz), _CV_FP (bar), 6);
  if (! _FP_EQ (res, _CV_FP (baz)))
    abort ();
  res = _fmempcpy (_CV_FP (baz + 6), _CV_FP (foo), 8);
  if (! _FP_EQ (res, _CV_FP (baz + 14)))
    abort ();
  /* Beware of corner cases... */
  res = _fmemcpy (_CV_FP (foo), _CV_FP (bar), 0);
  if (! _FP_EQ (res, _CV_FP (foo)))
    abort ();
  write (1, baz, sizeof (baz));
  write (1, "\n", 1);
  return 0;
}]],[[world hello!!!
]])
AT_LIBI86_CHECK_FOR_SMALL_MODEL_OR_ABOVE_NONDOSX(dnl
[[#include <dos.h>
#include <stdlib.h>
#include <unistd.h>
#include <libi86/string.h>
__far const char foo[] = "hello!!!", bar[] = "world ";
__far char baz[14];
int
main (void)
{
  union REGS inr, outr;
  struct SREGS sr;
  __libi86_fpv_t res = _fmempcpy (baz, bar, 6);
  _fmemcpy (res, foo, 8);
#ifdef __MSDOS__
  memset (&inr, 0xf6, sizeof inr);
  memset (&sr, 0, sizeof sr);
  inr.h.ah = 0x40;
  inr.w.bx = 1;
  inr.w.cx = sizeof (baz);
  inr.w.dx = FP_OFF (baz);
  sr.ds = FP_SEG (baz);
  if (intdosx (&inr, &outr, &sr) != sizeof (baz)
      || outr.w.ax != sizeof (baz))
    abort ();
  write (1, "\n", 1);
  return 0;
#else
# error
#endif
}]],[[world hello!!!
]])
AT_LIBI86_CHECK_FOR_SMALL_MODEL_OR_ABOVE_NONDOSX(dnl
[[#include <stdlib.h>
#include <unistd.h>
#include <libi86/string.h>
__far const char foo[] = "hello!!!", bar[] = "world ";
char baz[14];
int
main (void)
{
  _fmemcpy (baz, bar, 6);
  _fmemcpy (baz + 6, foo, 8);
  if (_fmempcpy (foo, bar, 0) != foo)
    abort ();
  write (1, baz, sizeof (baz));
  write (1, "\n", 1);
  return 0;
}]],[[world hello!!!
]])
AT_CLEANUP

