AT_SETUP([[bdos, bdosptr (Borland)]])
AT_LIBI86_CHECK(dnl
[[#define _BORLANDC_SOURCE
#include <dos.h>
int
main (void)
{
#ifdef __MSDOS__
  bdosptr (9, "Hello $(ignore this)", 0);
  bdos (2, '$', 0);
  bdos (2, 'f', 0);
  bdos (2, 'r', 0);
  bdos (2, 'o', 0);
  bdos (2, 'm', 0);
  bdos (2, '$', 0);
  bdosptr (9, " bdos and bdosptr!\r\n$(and ignore this too)", 0);
#else
# error
#endif
  return 0;
}]],[[Hello $from$ bdos and bdosptr!
]])
AT_CLEANUP

AT_SETUP([[intdos (Borland)]])
AT_LIBI86_CHECK_FOR_NEAR_DATA_MODEL(dnl
[[#define _BORLANDC_SOURCE
#include <dos.h>
void abort (void);
int
main (void)
{
  union REGS regs;
  int rv;
#ifdef __MSDOS__
  static char msg[] = "Hello from intdos!\r\n(ignore this part)";
  memset (&regs, 0xf6, sizeof (regs));
  regs.h.ah = 0x40;
  regs.x.bx = 1;
  regs.x.cx = 20;
  regs.x.dx = FP_OFF (_CV_FP (msg));
  rv = intdos (&regs, &regs);
  if (rv != 20 || regs.x.cflag || (regs.x.flags & 0x0701) != 0x0200)
    abort ();
  return 0;
#else
# error
#endif
}]],[[Hello from intdos!
]])
AT_CLEANUP

AT_SETUP([[intdosx (Borland)]])
AT_LIBI86_CHECK_FOR_NONDOSX(dnl
[[#define _BORLANDC_SOURCE
#include <dos.h>
#include <string.h>
#include <time.h>
#ifndef __MSDOS__
# error
#endif
void abort (void);
const char msg1[] = "hello world ~\n";
int
main (void)
{
  union REGS r;
  struct SREGS sr;
  unsigned cookie = time (NULL);
  memset (&r, 0xf6, sizeof (r));
  memset (&sr, 0xf6, sizeof (sr));
  r.h.ah = 0x40;
  r.x.bx = 1;
  r.x.cx = sizeof (msg1) - 1;
  r.x.dx = FP_OFF (_CV_FP (msg1));
  sr.ds = FP_SEG (_CV_FP (msg1));
  sr.es = cookie;
  if (intdosx (&r, &r, &sr) != sizeof (msg1) - 1
      || r.x.ax != sizeof (msg1) - 1
      || r.x.cflag || (r.x.flags & 0x0701) != 0x0200
# ifndef __IA16_CMODEL_IS_FAR_TEXT
      || sr.cs != __libi86_get_cs ()
# endif
      || sr.ss != __libi86_get_ss ()
      || sr.ds != FP_SEG (_CV_FP (msg1)) || sr.es != cookie)
    abort ();
  return 0;
}]],[[hello world ~
]])
AT_LIBI86_CHECK_FOR_SMALL_MODEL_OR_ABOVE_NONDOSX(dnl
[[#define _BORLANDC_SOURCE
#include <dos.h>
#include <string.h>
#include <time.h>
#ifndef __MSDOS__
# error
#endif
void abort (void);
__far const char msg1[] = "hello world ~\n";
int
main (void)
{
  union REGS r;
  struct SREGS sr;
  unsigned cookie = time (NULL);
  memset (&r, 0xf6, sizeof (r));
  memset (&sr, 0xf6, sizeof (sr));
  r.h.ah = 0x40;
  r.x.bx = 1;
  r.x.cx = sizeof (msg1) - 1;
  r.x.dx = FP_OFF (msg1);
  sr.ds = FP_SEG (msg1);
  sr.es = cookie;
  if (intdosx (&r, &r, &sr) != sizeof (msg1) - 1
      || r.x.ax != sizeof (msg1) - 1
      || r.x.cflag || (r.x.flags & 0x0701) != 0x0200
# ifndef __IA16_CMODEL_IS_FAR_TEXT
      || sr.cs != __libi86_get_cs ()
# endif
      || sr.ss != __libi86_get_ss ()
      || sr.ds != FP_SEG (msg1) || sr.es != cookie)
    abort ();
  return 0;
}]],[[hello world ~
]])
AT_CLEANUP

AT_SETUP([[peek, peekb]])
AT_LIBI86_CHECK_FOR_NONDOSX(dnl
[[#define _BORLANDC_SOURCE
#include <stdlib.h>
#include <bios.h>
#include <dos.h>
int
main (void)
{
  unsigned short kb = biosmemory ();
  unsigned short hw = biosequip ();
  if (kb != peek (0x0040, 0x0013))
    abort ();
  if ((unsigned char) hw != (unsigned char) peekb (0x0040, 0x0010))
    abort ();
  if ((unsigned char) (hw >> 8) != (unsigned char) peekb (0x0040, 0x0011))
    abort ();
  return 0;
}]],[])
AT_CLEANUP

AT_SETUP([[poke, pokeb]])
AT_LIBI86_CHECK(dnl
[[#define _BORLANDC_SOURCE
#include <stdlib.h>
#include <dos.h>
volatile unsigned x = 0xb3ac;
int
main (void)
{
  if (x != 0xb3ac)
    abort ();
  poke (__libi86_get_ss (), (unsigned) &x, 0x4ab8);
  if (x != 0x4ab8)
    abort ();
  pokeb (__libi86_get_ss (), (unsigned) &x, 0xd2);
  if (x != 0x4ad2)
    abort ();
  return 0;
}]],[])
AT_CLEANUP

