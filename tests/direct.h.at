AT_BANNER([[<direct.h> tests]])

AT_SETUP([[_getcwd, _getdcwd]])
AT_LIBI86_CHECK(dnl
[[#include <direct.h>
#include <stdio.h>
#include <string.h>
#include <libi86/stdlib.h>
int
main (void)
{
  char cwd1[_MAX_PATH], *cwd2, cwd3[_MAX_PATH], *cwd4, cwd5[3];
  if (_getcwd (cwd1, sizeof cwd1) != cwd1)
    abort ();
  puts ("1 OK");
  cwd2 = _getcwd (NULL, _MAX_PATH);
  if (! cwd2)
    abort ();
  puts ("2 OK");
  if (strcmp (cwd1, cwd2) != 0)
    abort ();
  puts ("3 OK");
  if (_getdcwd (0, cwd3, sizeof cwd3) != cwd3)
    abort ();
  puts ("4 OK");
  if (strcmp (cwd1, cwd3) != 0)
    abort ();
  puts ("5 OK");
  cwd4 = _getdcwd (0, NULL, _MAX_PATH);
  if (! cwd4)
    abort ();
  puts ("6 OK");
  if (strcmp (cwd1, cwd4) != 0)
    abort ();
  puts ("7 OK");
  if (_getdcwd (0, cwd5, sizeof cwd5) != NULL)
    abort ();
  puts ("8 OK");
  return 0;
}]],dnl
[[1 OK
2 OK
3 OK
4 OK
5 OK
6 OK
7 OK
8 OK
]])
AT_CLEANUP

AT_SETUP([[_getdrive]])
AT_LIBI86_CHECK(dnl
[[#include <direct.h>
void abort (void);
int
main (void)
{
  int drive = _getdrive ();
  if (drive < 1 || drive > 0xff)
    abort ();
  if (_getdrive () != drive)
    abort ();
  return 0;
}]],[])
AT_CLEANUP

AT_SETUP([[_mkdir, _rmdir]])
dnl FIXME
AT_SKIP_IF([test yes = "$DOSEMU_IS_1"])
AT_LIBI86_CHECK_WITH_TMP_DIR(dnl
[[#include <direct.h>
#include <errno.h>
#include <stdio.h>
void abort (void);
int
main (void)
{
  int rv = _mkdir (TMP_DIR "/foo");
  if (rv != 0)
    {
      int err = errno;
      fprintf (stderr, "%u: rv == %d, errno == %d\n", __LINE__, rv, err);
      abort ();
    }
  puts ("1 OK");
  if (_mkdir (TMP_DIR "/foo") == 0)
    abort ();
  puts ("2 OK");
#ifndef __ACK
  if (_mkdir (TMP_DIR "/foo", 0700) == 0)
    abort ();
#endif
  puts ("3 OK");
  if (_mkdir (TMP_DIR "/foo/bar") != 0)
    abort ();
  puts ("4 OK");
#ifndef __ACK
  if (_mkdir (TMP_DIR "/foo/bar", 0777) == 0)
    abort ();
#endif
  puts ("5 OK");
  if (_rmdir (TMP_DIR "/foo/bar") != 0)
    abort ();
  puts ("6 OK");
  if (_rmdir (TMP_DIR "/foo") != 0)
    abort ();
  puts ("7 OK");
  if (_rmdir (TMP_DIR "/foo") == 0)
    abort ();
  puts ("8 OK");
  return 0;
}]],dnl
[[1 OK
2 OK
3 OK
4 OK
5 OK
6 OK
7 OK
8 OK
]])
AT_LIBI86_CHECK_CXX_WITH_TMP_DIR(dnl
[[#include <direct.h>
extern "C" void abort (void);
int
main (void)
{
  if (_mkdir (TMP_DIR "/foo") != 0)
    abort ();
  if (_mkdir (TMP_DIR "/foo", 0700) == 0)
    abort ();
  if (_rmdir (TMP_DIR "/foo") != 0)
    abort ();
  if (_rmdir (TMP_DIR "/foo") == 0)
    abort ();
  return 0;
}]],[])
AT_CLEANUP
