#include <stdio.h>
#include <unistd.h>
void abort (void);
int
main (int argc, char **argv)
{
#ifdef __MSDOS__
  int fd = -1;
  unsigned buf, r = 0xf6f6;

  if (_dos_open (argv[0], O_RDONLY | O_NOINHERIT, &fd) != 0)
    abort ();
  puts ("1 OK");

  if (fd == -1)
