  puts ("2 OK");

  if (_dos_read (fd, _CV_FP (&buf), sizeof buf, &r) != 0
      || r != sizeof buf)
    abort ();
  puts ("3 OK");

  if (_dos_close (fd) != 0)
    abort ();
  puts ("4 OK");

  return 0;
#else
# error
#endif
}]],[[1 OK
2 OK
3 OK
4 OK
]])
AT_CLEANUP
